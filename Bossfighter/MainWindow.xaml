<Window x:Class="Bossfighter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bossfighter"
        mc:Ignorable="d"
        Title="Bossfighter" 
        Height="840" 
        Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <StackPanel Background="#292928" Margin="0,0,0,-10">

        <Label Content="Welcome to bossfighter" FontSize="25" HorizontalAlignment="Center" Margin="5" Foreground="#f2f3f2"/>
        <Image Source="/Images/keqing2.png" Width="400" Height="539"/>
        <Label Content="Enter your name:" FontSize="25" HorizontalAlignment="Center" Margin="5" Foreground="#f2f3f2"/>
        <TextBox x:Name="name_input" Width="380" Height="60" Background="#f2f3f2" Foreground="#bfa3e7" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Confirm" Content="Confirm" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="380" Height="60" FontSize="25" Click="Confirm_Click" ClickMode="Release" Background="#bfa3e7" Foreground="#f2f3f2" Margin="0,0,0,10"/>
    
    </StackPanel>
</Window>
